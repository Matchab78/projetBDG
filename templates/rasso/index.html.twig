{% extends 'base.html.twig' %}

{% block title %}Hello RassoController!{% endblock %}

{% block body_class %}page-scrollable{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .page-scrollable .navbar {
        position: absolute;
    }
    .event-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin: 10px 0;
    }
    .event-card h3 {
        margin-top: 0;
    }
</style>
{% endblock %}

{% block body %}

