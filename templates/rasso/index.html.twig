        <h2 class="content__title no-select">
            <span>Nos rasso</span>
            <span class="content__title-sub"></span>
        </h2>
    </div>
</main>
</section>

<section>
    <h2>Liste des événements</h2>
    <div class="event-list">
        {% for event in events %}
            <div class="event-card">
                <h3>{{ event.ville }}</h3>
                <p><strong>Date:</strong> {{ event.dateEvent|date('d/m/Y') }}</p>
                <p><strong>Adresse:</strong> {{ event.rue }}, {{ event.cp }} {{ event.ville }}</p>
                <p><strong>Description:</strong> {{ event.description }}</p>
                <p><strong>Places disponibles:</strong> {{ event.places }}</p>
            </div>
        {% endfor %}
    </div>
</section>


