{% extends 'base.html.twig' %}

{% block title %}Détail Voiture{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/detailVoit.css') }}">
{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan1.jpeg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay">
            <span class="subtitle">DÉCOUVREZ</span>
            <h1 class="title">{{ voiture.description }}</h1>
        </div>
    </div>
</section>

<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan2.jpg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay_stat">
        <span class="text_stat">Statistiques</span>
            <div class="stat">
                <span class="label">Vitesse max</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 80%;"></div>
                </div>
                <span class="value">{{ voiture.vitesse }} km/h</span>
            </div>
            <div class="stat">
                <span class="label">Accélération</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 75%;"></div>
                </div>
                <span class="value">0 à 100 en {{ voiture.acceleration }}s</span>
            </div>
            <div class="stat">
                <span class="label">Puissance</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 80%;"></div>
                </div>
                <span class="value">{{ voiture.chevaux }} ch</span>
            </div>
        </div>
        <div class="description_voit">
            <p> 
                Découvrez la Lamborghini Huracán, une supercar de rêve qui incarne<br> puissance, précision,
                et design audacieux. Équipée d'un moteur V10   atmosphérique<br> de 5.2  litres, la Huracán délivre
                une puissance impressionnante de 640 chevaux,<br> pour des accélérations fulgurantes qui vous propulsent
                de 0 à 100 km/h en 3.4 secondes.
            </p>
        </div> 
    </div>
</section>

<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan3.jpg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay_config">
            <span class="subtitle">CONFIGURATION</span>
            <h1 class="title">Configurez votre {{ voiture.description }} : </h1>
        </div>
    </div>

<!-- Formulaire de personnalisation de voiture -->
<div id="customization-form">
    <h2>OPTION</h2>
    <p>sélectionner</p>
    <form>
        <div class="option-group">
            <h3>Intérieur:</h3>
            <label><input type="radio" name="interior" value="cuir" onchange="updateSelections()"> Cuir</label>
            <label><input type="radio" name="interior" value="alcantara" onchange="updateSelections()"> Alcantara</label>
        </div>

        <div class="option-group">
            <h3>Jantes:</h3>
            <label><input type="radio" name="wheels" value="carbone" onchange="updateSelections()"> Carbone</label>
            <label><input type="radio" name="wheels" value="acier" onchange="updateSelections()"> Acier</label>
        </div>

        <div class="option-group">
            <h3>Volant:</h3>
            <label><input type="radio" name="steering" value="sport" onchange="updateSelections()"> Sport</label>
            <label><input type="radio" name="steering" value="confort" onchange="updateSelections()"> Confort</label>
        </div>

        <div class="option-group">
            <h3>Toit:</h3>
            <label><input type="radio" name="roof" value="carbone" onchange="updateSelections()"> Carbone</label>
            <label><input type="radio" name="roof" value="ouvrant" onchange="updateSelections()"> Ouvrant</label>
        </div>

        <div class="option-group">
            <h3>CarPlay:</h3>
            <label><input type="radio" name="carplay" value="oui" onchange="updateSelections()"> Oui</label>
            <label><input type="radio" name="carplay" value="non" onchange="updateSelections()"> Non</label>
        </div>

        <div class="option-group">
            <h3>Pack:</h3>
            <label><input type="radio" name="carplay" value="oui" onchange="updateSelections()"> Sport</label>
            <label><input type="radio" name="carplay" value="non" onchange="updateSelections()"> Normal</label>
        </div>
    </form>
</div>

<script>
    function updateSelections() {
        const interior = document.querySelector('input[name="interior"]:checked')?.value || 'Aucune sélection';
        const wheels = document.querySelector('input[name="wheels"]:checked')?.value || 'Aucune sélection';
        const steering = document.querySelector('input[name="steering"]:checked')?.value || 'Aucune sélection';
        const roof = document.querySelector('input[name="roof"]:checked')?.value || 'Aucune sélection';
        const carplay = document.querySelector('input[name="carplay"]:checked')?.value || 'Aucune sélection';

        
    }
</script>

</section>

          
