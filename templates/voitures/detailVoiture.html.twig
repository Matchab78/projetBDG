{% extends 'base.html.twig' %}

{% block title %}Détail Voiture{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/detailVoit.css') }}">
{% endblock %}

{% block body %}
<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan1.jpeg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay">
            <span class="subtitle">DÉCOUVREZ</span>
            <h1 class="title">{{ voiture.description }}</h1>
        </div>
    </div>
</section>

<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan2.jpg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay_stat">
        <span class="text_stat">Statistiques</span>
            <div class="stat">
                <span class="label">Vitesse max</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 80%;"></div>
                </div>
                <span class="value">{{ voiture.vitesse }} km/h</span>
            </div>
            <div class="stat">
                <span class="label">Accélération</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 75%;"></div>
                </div>
                <span class="value">0 à 100 en {{ voiture.acceleration }}s</span>
            </div>
            <div class="stat">
                <span class="label">Puissance</span>
                <div class="progress-bar">
                    <div class="progress" style="width: 80%;"></div>
                </div>
                <span class="value">{{ voiture.chevaux }} ch</span>
            </div>
        </div>
        <div class="description_voit">
            <span>{{voiture.description_v}}</span>
        </div> 
    </div>
</section>

<section class="hero-section">
    <div class="image-container">
        <img src="{{ asset('css/images/huracan3.jpg') }}" alt="Lamborghini Huracan" class="background-image">
        <div class="overlay_config">
            <span class="subtitle">CONFIGURATION</span>
            <h1 class="title">Configurez votre {{ voiture.description }} : </h1>
        </div>
    </div>
    <div class="options-panel">
                <h3 class="options-title">OPTION</h3>
                
                <div class="card">
                    <h4>Intérieur</h4>
                    <div class="option-choices">
                        <label class="option-choice">
                            <input type="radio" name="interior" value="cuir" checked>
                            <div class="option-content">
                                <span class="option-name">Cuir</span>
                                <span class="description">Intérieur en cuir premium</span>
                                <div class="label">Label</div>
                            </div>
                        </label>
                        <label class="option-choice">
                            <input type="radio" name="interior" value="alcantara">
                            <div class="option-content">
                                <span class="option-name">Alcantara</span>
                                <span class="description">Finition sportive en alcantara</span>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="card">
                    <h4>Jante</h4>
                    <div class="option-choices">
                        <label class="option-choice">
                            <input type="radio" name="wheels" value="carbone">
                            <div class="option-content">
                                <span class="option-name">Carbone</span>
                                <span class="description">Jantes en fibre de carbone</span>
                            </div>
                        </label>
                        <label class="option-choice">
                            <input type="radio" name="wheels" value="acier" checked>
                            <div class="option-content">
                                <span class="option-name">Acier</span>
                                <span class="description">Jantes en acier forgé</span>
                                <div class="label">Label</div>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="card">
                    <h4>Volant</h4>
                    <div class="option-choices">
                        <label class="option-choice">
                            <input type="radio" name="steering" value="sport" checked>
                            <div class="option-content">
                                <span class="option-name">Sport</span>
                                <span class="description">Volant sport en cuir perforé</span>
                                <div class="label">Label</div>
                            </div>
                        </label>
                        <label class="option-choice">
                            <input type="radio" name="steering" value="comfort">
                            <div class="option-content">
                                <span class="option-name">Confort</span>
                                <span class="description">Volant confort en cuir lisse</span>
                            </div>
                        </label>
                    </div>
                </div>

                <div class="card">
                    <h4>Toit</h4>
                    <div class="option-choices">
                        <label class="option-choice">
                            <input type="radio" name="roof" value="carbone" checked>
                            <div class="option-content">
                                <span class="option-name">Carbone</span>
                                <span class="description">Toit en fibre de carbone</span>
                                <div class="label">Label</div>
                            </div>
                        </label>
                        <label class="option-choice">
                            <input type="radio" name="roof" value="ouvrant">
                            <div class="option-content">
                                <span class="option-name">Ouvrant</span>
                                <span class="description">Toit ouvrant panoramique</span>
                            </div>
                        </label>
                    </div>
                </div>
            </div>
</section>
          
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const progressBars = document.querySelectorAll('.progress');
        progressBars.forEach(bar => {
            const targetWidth = bar.style.width;
            bar.style.width = '0';
            setTimeout(() => {
                bar.style.width = targetWidth;
            }, 500);
        });
    });
</script>

{% endblock %}
